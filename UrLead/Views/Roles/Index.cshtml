@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Index";
}

<h1>Roles</h1>

<form method="post">
    <p asp-validation-summary="ModelAll" class="text-danger"></p>
    <p asp-validation-for="roleName" class="text-danger"></p>
    <div class="input-group">
        <input type="text" name="roleName" placeholder="Role name" class="form-control" required />
        <button type="submit" class="input-group-btn btn btn-primary">Add Role</button>
    </div>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var role in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => role.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => role.Id)
            </td>
            <!-- <td>
                <a asp-action="Edit" asp-route-id="@role.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@role.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@role.Id">Delete</a>
            </td> -->
            <td>
                <form class="d-inline" asp-controller="Roles" asp-action="Delete" asp-route-id="@role.Id">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-all"></i> Delete
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
